# nginx/default.conf.template
server {
    listen 80;
    listen [::]:80;
    server_name _;

    set $csp_policy "default-src 'self'; \
                     script-src 'self' 'unsafe-inline' 'unsafe-eval' https://*.googletagmanager.com https://static.cloudflareinsights.com; \
                     style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; \
                     img-src 'self' data: blob: https: https://*.youtube.com https://*.ytimg.com https://*.googlevideo.com; \
                     font-src 'self' https://fonts.gstatic.com; \
                     connect-src 'self' https://*.youtube.com https://*.ytimg.com https://*.googlevideo.com wss: ws: https://*.google-analytics.com https://*.googletagmanager.com https://static.cloudflareinsights.com; \
                     frame-src 'self' https://www.youtube-nocookie.com https://www.youtube.com;";

    add_header Content-Security-Policy $csp_policy always;

    location / {
        add_header Content-Security-Policy $csp_policy always;
        proxy_pass http://app:$APP_PORT;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /api/ {
        add_header Content-Security-Policy $csp_policy always;
        # limit_req zone=api burst=20 nodelay;
        proxy_pass http://app:$APP_PORT;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}