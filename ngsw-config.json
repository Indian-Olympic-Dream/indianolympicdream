{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/index.html",
          "/*.css",
          "/*.js",
          "/manifest.webmanifest"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/assets/images/**/*",
          "/assets/fonts/*",
          "/assets/icons/*",
          "/assets/docs/**/*.pdf"
        ],
        "urls": [
          "https://fonts.googleapis.com/**",
          "https://fonts.gstatic.com/**"
        ]
      }
    }
  ],
  "dataGroups": [
    {
      "name": "images-cache",
      "cacheConfig": {
        "strategy": "performance",
        "maxSize": 100,
        "maxAge": "7d"
      },
      "patterns": [
        "/assets/images/**"
      ]
    },
    {
      "name": "documents-cache",
      "cacheConfig": {
        "strategy": "performance",
        "maxSize": 20,
        "maxAge": "30d"
      },
      "patterns": [
        "/assets/docs/**"
      ]
    }
  ]
}